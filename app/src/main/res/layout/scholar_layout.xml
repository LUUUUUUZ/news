<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/scholar_single_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:fitsSystemWindows="true"
            app:titleTextColor="#ffffff"
            app:contentInsetStartWithNavigation="0dp">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <include layout="@layout/scholar_card"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_followed">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scholar_followed"
                android:text="5"
                android:textSize="15dp"
                android:layout_marginHorizontal="15dp">

            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_viewed">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7053"
                android:textSize="15dp"
                android:id="@+id/scholar_viewed"
                android:layout_marginHorizontal="15dp">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/scholar_edu_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Education"
                android:textColor="@color/colorTitle"
                android:background="@color/blue"
                android:layout_marginLeft="10dp">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scholar_edu"
                android:layout_marginTop="10dp"
                android:text="It is education here"
                android:layout_marginLeft="25dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/scholar_bio_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biograph"
                android:textColor="@color/colorTitle"
                android:background="@color/blue"
                android:layout_marginLeft="10dp">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scholar_bio"
                android:layout_marginTop="10dp"
                android:text="It is bio here"
                android:layout_marginLeft="25dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/scholar_homepage_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Homepage"
                android:textColor="@color/colorTitle"
                android:background="@color/blue"
                android:layout_marginLeft="10dp">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scholar_homepage"
                android:layout_marginTop="10dp"
                android:text="It is homepage here"
                android:layout_marginLeft="25dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/scholar_work_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work"
                android:textColor="@color/colorTitle"
                android:background="@color/blue"
                android:layout_marginLeft="10dp">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scholar_work"
                android:layout_marginTop="10dp"
                android:text="It is work here"
                android:layout_marginLeft="25dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scholar_table_layout"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tags"
                android:textColor="@color/colorTitle"
                android:background="@color/blue"
                android:layout_marginLeft="10dp">
            </TextView>


            <TableLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scholar_tags_table"
                >
            </TableLayout>

        </LinearLayout>



    </LinearLayout>

</ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>